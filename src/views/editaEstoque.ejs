<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head') %>
    <title>MyStock</title>
</head>
<body>
    <%- include('navbar-logado') %>
        <form action="/editaEstoque/<%= id_estoque %>" method="post" enctype="multipart/form-data">
            <div class="container mt-5" style="margin-left: auto; margin-right: auto; text-align: center;">
                <h4> Edite um Estoque </h4>
                <br>
            </div>
            <div class="container mt-5">
                <div class="form mt-5" style="padding: 2%;">
                    <div class="mb-3" style="text-align: left;">
                        <label class="form-label">Nome do Estoque</label>
                        <input type="text" id="informacao" name="nome" class="form-control" value="<%= nome_estoque %>">
                    </div>
                    <div class="d-flex mb-3" style="text-align: left;">
                    </div>
                    <div class="mb-4" style="text-align: left;">
                        <label class="form-label">Categoria</label>
                        <select class="form-select" id="opcao" name="categoria" aria-label="Default select example">
                            <% categorias.forEach(function (categoria) { %>
                                <option value="<%= categoria.id %>" <% if(categoria_estoque === categoria.id ) { %>selected<% } %>><%= categoria.nome %></option>
                            <% }) %>                        
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary" style="background-color: black; border-color: black;">Atualizar</button>
                </div>
            </div>
        </form>
</body>
</html>