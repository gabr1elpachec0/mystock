<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head') %>
    <title>MyStock</title>
</head>
<body>
    <%- include('navbar-logado') %>
        <form method="post" action="/editaProduto/<%= produto.id_prod %>" enctype="multipart/form-data">
            <div class="container mt-5" style="margin-left: auto; margin-right: auto; text-align: center;">
                <h4> Edite um Produto </h4>
                <br>
            </div>
            <div class="container mt-5">
                <div class="form mt-5" style="padding: 2%;">
                    <input type="hidden" name="estoque" value="<%= produto.id_stock %>">
                    <div class="mb-3" style="text-align: left;">
                        <label class="form-label">Nome do Produto</label>
                        <input type="text" name="nome" class="form-control" value="<%= produto.nome_prod %>" required>
                    </div>
                    <div class="d-flex mb-3" style="text-align: left;">
                        <div style="float: left; margin-right: 5%; width: 50%;">
                            <label class="form-label">Custo (em R$)</label>
                            <input type="number" name="custo" class="form-control" data-type="currency" value="<%= produto.custo %>" required>
                        </div>
                        <div style="float: right; margin-left: 5%; width: 50%;">
                            <label class="form-label">Valor de Venda (em R$)</label>
                            <input type="number" name="valor" class="form-control" data-type="currency" value="<%= produto.valor %>" required>
                        </div>
                    </div>
                    <div class="mb-3" style="text-align: left;">
                        <label class="form-label">Quantidade do Produto</label>
                        <input type="number" name="quantidade" class="form-control" value="<%= produto.quantidade %>" required>
                    </div>

                    <div class="d-flex mb-3" style="text-align: left;">
                        <div style="float: left; margin-right: 5%; width: 50%;">
                            <label class="form-label">Fornecedor</label>
                            
                            <select class="form-select" aria-label="Default select example" name="fornecedor" required>
                                <% suppliers.forEach(function (supplier) { %>
                                    <option value="<%= supplier.id_forn %>" <% if(produto.id_supply === supplier.id_forn) { %>selected<% } %>><%= supplier.nome_forn %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div style="text-align: center; float: center; margin-left: 5%; width: 50%; margin-top: 6%;">
                            <a class="fw-bold" aria-current="page" href="/addForn" style="color: black; text-decoration:none;">
                                Cadastrar um novo fonecedor
                            </a>
                        </div>
                    </div>
                    <div class="mb-4" style="text-align: left;">
                        <label for="formFile" class="form-label">Adicione uma foto</label>
                        <input class="form-control" name="imagem" type="file" id="formFile" required>
                    </div>
                    <button type="submit" class="btn btn-primary" style="background-color: black; border-color: black;">Atualizar</button>
                </div>
            </div>
        </form>
</body>
</html>