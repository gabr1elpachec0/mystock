<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head') %>
    <title>MyStock</title>
</head>
<body>
    <%- include('navbar-logado') %>
    <% usuario.forEach(function (usuario) { %>
      <form action="/editarPerfil/<%= usuario.id_us %>" method="post" enctype="multipart/form-data">
        <div class="container mt-5" style="margin-left: auto; margin-right: auto; text-align: center;">
            <h4> Editar Perfil </h4>
        </div>
        <div class="form mt-5" style="padding: 2%;">
            <div class="mb-4" style="text-align: left;">
                <label class="form-label">Nome de Usu√°rio</label>
                <input type="text" class="form-control" id="nome" name="nome" value="<%= usuario.nome_us %>" required>
            </div>
            <div class="mb-3" style="text-align: left;">
                <label for="exampleInputEmail1" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= usuario.email %>" required>
            </div>
            <div class="mb-3" style="text-align: left;">
                <label for="exampleInputPassword1" class="form-label">Nova Senha</label>
                <input type="password" class="form-control" id="senha" name="senha" required>
            </div>
            <button type="submit" class="btn btn-primary" style="background-color: black; border-color: black;">Atualizar</button>
        </div>
    </form>
    <% }) %>
</body>
</html>